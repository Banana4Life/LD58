{
  "name": "ld58-threejs",
  "version": "1.0.0",
  "description": "Ludum Dare 58 - Three.js Project",
  "main": "src/main.ts",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "publish": "tsc && vite build --base /MetaJammer/"
  },
  "dependencies": {
    "postcss-import-url": "^7.2.0",
    "postcss-inline-base64": "^7.3.1",
    "three": "^0.180.0"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@types/three": "^0.180.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-arraybuffer": "^0.1.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-svg-loader": "^5.1.0"
  },
  "postcss": {
    "map": true,
    "plugins": {
      "postcss-import-url": {
        "recursive": true,
        "modernBrowser": true
      }
    }
  }
}
